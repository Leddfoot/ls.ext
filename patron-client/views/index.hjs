<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <title>{{dcterms:title}} av {{dcterms:creator}} ({{dcterms:date}})</title>
  </head>
  <body>
    <h1><span data-automation-id="work_title">{{dcterms:title}}</span> / <span data-automation-id="work_author">{{dcterms:creator}}</span> <span>(<span data-automation-id="work_date">{{dcterms:date}}</span>)</span></h1>
    {{#hasEdition.length}}
    <h2>Vi har:</h2>
    <ul>
      {{#hasEdition}}
        <li><a href="{{.}}">{{.}}</a></li>
      {{/hasEdition}}
    </ul>
    {{/hasEdition.length}}
    {{^hasEdition.length}}
    {{#hasEdition}}
    <h2>Vi har</h2>
    <ul>
        <li><a href="{{hasEdition}}">{{hasEdition}}</a></li>
    </ul>
    {{/hasEdition}}
    {{^hasEdition}}
    <h2>Vi har ingen eksemplarer</h2>
    {{/hasEdition}}
    {{/hasEdition.length}}
  </body>
</html>