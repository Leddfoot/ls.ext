{
  "dynamic_templates": [
    {
      "workTitle_template": {
        "path_match": "work.mainTitle.*",
        "mapping": {
          "type": "string"
        }
      }
    },
    {
      "partTitle_template": {
        "path_match": "work.partTitle.*",
        "mapping": {
          "type": "string"
        }
      }
    }
  ],
  "properties": {
    "work": {
      "properties": {
        "creator": {
          "type": "nested",
          "properties": {
            "uri": {
              "type": "string",
              "index": "no"
            },
            "name": {
              "type": "string"
            },
            "birthYear": {
              "type": "string",
              "index": "no"
            },
            "deathYear": {
              "type": "string",
              "index": "no"
            }
          }
        },
        "originalTitle": {
          "type": "string"
        },
        "originalPartTitle": {
          "type": "string"
        },
        "uri": {
          "type": "string",
          "index": "no"
        },
        "publicationYear": {
          "type": "string",
          "index": "no"
        }
      }
    }
  }
}