{
  "settings": {
    "analysis": {
      "char_filter": {
        "lang_filter": {
          "type": "pattern_replace",
          "pattern": "\\Qhttp://lexvo.org/id/iso639-3/\\E([a-z]{3}+)",
          "replacement": "$1"
        }
      },
      "analyzer": {
        "transform_lang_uri": {
          "tokenizer": "standard",
          "char_filter": ["lang_filter"]
        }
      }
    }
  }
}