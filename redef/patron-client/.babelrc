{
  "presets": [
    "es2015",
    "stage-2",
    "react"
  ],
  "plugins": [
    [
      "react-transform",
      {
        "transforms": [
          {
            "transform": "react-transform-hmr",
            "imports": [
              "react"
            ],
            "locals": [
              "module"
            ]
          }
        ]
      }
    ],
    [
      "array-includes"
    ],
    [
      "react-intl",
      {
        "messagesDir": "./build/messages/",
        "enforceDescriptions": true
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        "rewire"
      ]
    }
  }
}
