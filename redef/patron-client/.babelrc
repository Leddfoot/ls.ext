{
  "presets": [
    "es2015",
    "stage-2",
    "react"
  ],
  "plugins": [
    [
      "array-includes"
    ],
    [
      "react-intl",
      {
        "messagesDir": "./build/messages/",
        "enforceDescriptions": true
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        ]
      ]
    },
    "test": {
      "plugins": [
        "rewire"
      ]
    }
  }
}
